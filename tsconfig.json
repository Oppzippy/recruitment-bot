{
	"compilerOptions": {
		"module": "CommonJS",
		"alwaysStrict": true,
		"sourceMap": true,
		"outDir": "out",
		"moduleResolution": "node",
		"target": "ES2022",
		"incremental": true,
		"isolatedModules": false,
		"esModuleInterop": true,
		"experimentalDecorators": true
	},
	"include": ["src/**/*"]
}
